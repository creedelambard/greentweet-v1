<%- model_class = ProposedTweet -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @proposed_tweet.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @proposed_tweet.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:hashtags) %>:</strong></dt>
  <dd><%= @proposed_tweet.hashtags %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              proposed_tweets_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_proposed_tweet_path(@proposed_tweet), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              proposed_tweet_path(@proposed_tweet),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
